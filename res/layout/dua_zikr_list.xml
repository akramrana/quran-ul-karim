<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dua_zikr_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:textSize="15dip"/>

        <TextView
            android:id="@+id/transliteration_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textIsSelectable="true"
            android:textColor="@color/transColor"
            android:layout_marginTop="12dip"/>

        <TextView
            android:id="@+id/transliteration_bn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textIsSelectable="true"
            android:layout_marginTop="12dip"
            android:textColor="@color/transColor"/>

        <TextView
            android:id="@+id/translations_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_marginTop="12dip"/>

        <TextView
            android:id="@+id/translations_bn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_marginTop="12dip"/>

        <TextView
            android:id="@+id/reference_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/reference_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/when_to_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/when_to_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/repeat_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tag_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tag_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15dip"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/name_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/transColor"
            android:textSize="13dip"
            android:gravity="center"
            android:layout_marginTop="12dip"/>

        <TextView
            android:id="@+id/name_bn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/transColor"
            android:textSize="13dip"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/copyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_cp"
                android:textSize="9sp"
                android:drawableTop="@android:drawable/ic_menu_set_as"
                android:gravity="center_vertical|center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_info"
                android:textSize="9sp"
                android:drawableTop="@android:drawable/ic_menu_help"
                android:gravity="center_vertical|center"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>