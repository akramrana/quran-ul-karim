<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TafsirActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_color"
            android:id="@+id/topTafsirBar">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_gravity="center_vertical">

                <Button
                    android:id="@+id/previousBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prev"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhiteDN"
                    android:drawableLeft="@android:drawable/ic_media_previous"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="6">

                <TextView
                    android:id="@+id/bookmark_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhiteDN"
                    android:textSize="18dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/string_tafsir"/>

                <TextView
                    android:id="@+id/bookmark_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhiteDN"
                    android:textSize="15dp"
                    android:text="@string/string_tafsir_subtitle"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:gravity="right">

                <Button
                    android:id="@+id/nextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhiteDN"
                    android:drawableRight="@android:drawable/ic_media_next"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tafsirButtonSection"
            android:layout_below="@id/topTafsirBar">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/ibnkathir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_ibnkathir"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/bg_color"/>

                    <Button
                        android:id="@+id/bayaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_bayaan"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/colorBlack"/>

                    <Button
                        android:id="@+id/zakaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_zakaria"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/colorBlack"/>

                    <Button
                        android:id="@+id/tafhim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_tafhim"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/colorBlack"/>

                    <Button
                        android:id="@+id/fathul_mazid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_fathul_mazid"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/colorBlack"/>

                    <Button
                        android:id="@+id/fezilalil_quran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_fezilalil_quran"
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/colorBlack"/>

                    <Button
                        android:id="@+id/jalalayn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_jalalayn"
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/colorBlack"/>

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@id/tafsirButtonSection"
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_below="@id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ayahSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/surah_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp"
                        android:textIsSelectable="true"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/ayah_arabic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/surah_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="22dp" />

                    <WebView
                        android:id="@+id/text_tajweed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="Tajweed Text"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        tools:ignore="WebViewLayout"
                        android:visibility="gone"
                        android:scrollbars="none"
                        android:layout_below="@id/ayah_arabic"/>

                    <TextView
                        android:id="@+id/trans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/transColor"
                        android:layout_marginTop="5dip"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_below="@id/text_tajweed"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/ayah_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trans"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/colorWhite"
                        android:textIsSelectable="true"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/ayah_bangla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ayah_english"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/colorWhite"
                        android:textIsSelectable="true"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/ayah_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ayah_bangla"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="13dp"
                        android:textAllCaps="true"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/colorWhite"
                        android:layout_below="@id/ayah_bangla"
                        android:id="@+id/hr_line2"
                        android:layout_marginTop="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/tafsirTextSection"
                    android:layout_below="@id/ayahSection"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/ibn_kathir_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|end"/>

                    <TextView
                        android:id="@+id/bayaan_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_below="@id/ibn_kathir_content"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:layout_gravity="center_vertical|end"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/zakaria_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bayaan_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"/>


                    <TextView
                        android:id="@+id/tafhim_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zakaria_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"/>


                    <TextView
                        android:id="@+id/fathul_mazid_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tafhim_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"/>


                    <TextView
                        android:id="@+id/fezilalil_quran_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fathul_mazid_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"/>


                    <TextView
                        android:id="@+id/jalalayn_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fezilalil_quran_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/copyTextSection"
                    android:layout_below="@id/tafsirTextSection"
                    android:gravity="center">

                    <Button
                        android:id="@+id/copyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_cp"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@android:drawable/ic_menu_set_as"
                        android:layout_marginBottom="5dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>