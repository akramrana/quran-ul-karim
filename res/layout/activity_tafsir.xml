<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TafsirActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAboutBg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_color"
            android:id="@+id/topTafsirBar"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bookmark_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhiteDN"
                    android:textSize="18dp"
                    android:text="@string/string_tafsir"/>

                <TextView
                    android:id="@+id/bookmark_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhiteDN"
                    android:textSize="15dp"
                    android:text="@string/string_tafsir_subtitle"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tafsirButtonSection"
            android:layout_below="@id/topTafsirBar">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bayaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_bayaan"
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/counter_text_bg"/>

                    <Button
                        android:id="@+id/zakaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_zakaria"
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/counter_text_bg"/>

                    <Button
                        android:id="@+id/jalalayn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_jalalayn"
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorWhiteDN"
                        android:background="@color/counter_text_bg"/>

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@id/tafsirButtonSection"
            android:background="@color/bg_color"
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_below="@id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ayahSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/surah_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/ayah_arabic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/surah_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#fff"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/ayah_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ayah_arabic"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/ayah_bangla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ayah_english"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#fff"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/ayah_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ayah_bangla"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#fff"
                        android:textSize="13dp"
                        android:textAllCaps="true"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#fff"
                        android:layout_below="@id/ayah_bangla"
                        android:id="@+id/hr_line2"
                        android:layout_marginTop="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/tafsirTextSection"
                    android:layout_below="@id/ayahSection"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/bayaan_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhiteDN"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:justificationMode="inter_word"
                        android:layout_gravity="center_vertical|end"/>

                    <TextView
                        android:id="@+id/zakaria_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bayaan_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhiteDN"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:justificationMode="inter_word"
                        android:layout_gravity="center_vertical|end"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/jalalayn_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zakaria_content"
                        android:textIsSelectable="true"
                        android:textColor="@color/colorWhiteDN"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dip"
                        android:justificationMode="inter_word"
                        android:layout_gravity="center_vertical|end"
                        android:visibility="gone"/>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>