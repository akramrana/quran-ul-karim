<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackupRestoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAboutBg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_color"
            android:id="@+id/topAboutBar"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhiteDN"
                    android:textSize="18sp"
                    android:text="@string/string_bcre_en"/>

                <TextView
                    android:id="@+id/dg_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhiteDN"
                    android:textSize="15sp"
                    android:text="@string/string_bcre_subtitle"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topAboutBar"
            android:id="@+id/backup_sec">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/bckup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backup"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>


                    <LinearLayout
                        android:id="@+id/bln"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Favourites"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Bookmarks"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Reports"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Last visited Surah"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/colorWhite"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Word Challenge Data"
                            android:textColor="@color/colorWhite"/>


                        <TextView
                            android:id="@+id/lastBckpTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Last Backup: 04 April 2024 6:45pm"
                            android:textColor="@color/colorWhite"
                            android:visibility="gone"
                            android:textSize="12sp"/>

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@color/contrast_green"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/backup"
                            android:textColor="@android:color/background_light"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="right"
                            android:textAllCaps="false"/>


                    </LinearLayout>

                    <View
                        android:id="@+id/horizontal_line_00"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="10dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backup_sec"
            android:id="@+id/restore_sec">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/rstr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restore"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>


                <LinearLayout
                    android:id="@+id/rstrln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Favourites"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Bookmarks"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Reports"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Last visited Surah"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Word Challenge Data"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@color/orange"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/restore"
                        android:textColor="@color/contrast_black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:textAllCaps="false"/>

                </LinearLayout>

                <View
                    android:id="@+id/horizontal_line_01"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>