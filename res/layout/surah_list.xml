<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/surah_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Name Label -->

    <TextView
        android:id="@+id/name_arabic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:textColor="#3B5998"
        android:paddingRight="6dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/name_simple"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-24dp"
        android:paddingLeft="6dip"
        android:textColor="#3B5998"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/name_english"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="6dip"
        android:textAllCaps="true"
        android:textColor="#3B5998"
        android:textSize="11dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/ayah_static_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B5998"
            android:paddingLeft="6dip"
            android:textSize="11dip" 
            android:text="Ayat:"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/ayah_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B5998"
            android:textSize="11dip" 
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/revelation_static_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B5998"
            android:layout_marginLeft="15dp"
            android:textSize="11dip" 
            android:text="Revelation place:"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/revelation_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B5998"
            android:textSize="11dip" 
            android:textStyle="bold"/>
        
        
        
    </LinearLayout>
    
    <TextView
            android:id="@+id/quick_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B5998"
            android:textSize="11dip" 
            android:text="Add to quick links"
            android:layout_gravity="right"
            android:paddingRight="6dip"
            android:textStyle="bold"/>

</LinearLayout>