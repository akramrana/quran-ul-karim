        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25.0dip">

            <LinearLayout
                android:id="@+id/sura_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/menu_icon" />

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="Sura List"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/juz_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/juzImageView"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/juz" />

                <TextView
                    android:id="@+id/juzTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/juzImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="JUZ'"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25.0dip">


            <LinearLayout
                android:id="@+id/hizb_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hizbImageView"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/hizb" />

                <TextView
                    android:id="@+id/hizbTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hizbImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="Hizb"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rub_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rubImageView"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/rub" />

                <TextView
                    android:id="@+id/rubTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rubImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="RUB'"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25.0dip">

            <LinearLayout
                android:id="@+id/search_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/search" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="Search"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookmark_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bookmark" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="Bookmarks"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25.0dip">

            <LinearLayout
                android:id="@+id/quick_links_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/links" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="Quick Links"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/word_collection_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/collection" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="Dictionary"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25.0dip">

            <LinearLayout
                android:id="@+id/time_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/timeImageView"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="PRAYER TIME"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_link"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/linear_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/about" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="marquee"
                    android:text="About"
                    android:textSize="18.0sp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"/>
            </LinearLayout>

        </LinearLayout>

