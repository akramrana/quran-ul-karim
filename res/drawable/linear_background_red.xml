<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android" android:oneshot="false">
    <item android:duration="500">
        <shape>
            <solid android:color="#00000000"/> <!-- Transparent Background -->
            <stroke android:width="1dp" android:color="#ffffbb33"/>
        </shape>
    </item>
    <item android:duration="500">
        <shape>
            <solid android:color="#00000000"/> <!-- Transparent Background -->
            <stroke android:width="1dp" android:color="#00FFFFFF"/> <!-- Invisible Border -->
        </shape>
    </item>
</animation-list>